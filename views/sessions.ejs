<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Philip White">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js"></script>
    <link rel="stylesheet" href="/css/index.css">
    <title>Sessions</title>
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-center">
            <h1 class="display-4" style="padding: 25px; font-family: system-ui;">Sessions</h1>
        </div>

        <div class="d-flex justify-content-center" style="gap: 10px;">
            <% sessions.forEach(session=> { %>
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <a href="/session/<%= session.SessionID %>" class="card-title h4">
                                <%= session.SessionID %>
                            </a>
                        </div>
                        <p class="card-text">Started at <%= session.Timestamp %>
                        </p>
                        <% if (sessionsEnd.includes(session.SessionID)) { %>
                            <p class="card-text display-6" style="font-family: system-ui;">Session Ended</p>
                            <% } else { %>
                                <p class="card-text display-6" style="font-family: system-ui;">Session <em>Ongoing</em>
                                </p>
                                <% } %>
                                    <a href="/session/<%= session.SessionID %>" class="btn btn-secondary">Details</a>
                    </div>
                </div>
                <% }) %>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>